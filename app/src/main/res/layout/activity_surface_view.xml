<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dev.com.nobatime.gulfskorz.SurfaceViewActivity">

    <SurfaceView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:id="@+id/mysurface"
        android:src="@drawable/hole1"
        android:adjustViewBounds="true"

        android:contentDescription="@string/GolfHolePic"
        android:layout_gravity="bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/clubutton"
       />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"

        android:text="Player"
        android:id="@+id/playerbutton"
        android:layout_gravity="top" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"

        android:text="Par"
        android:id="@+id/parbutton"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/strokebutton"
        android:layout_toStartOf="@+id/strokebutton" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"

        android:text="Stroke"
        android:id="@+id/strokebutton"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/scorebutton"
        android:layout_toStartOf="@+id/scorebutton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"

        android:text="Score"
        android:id="@+id/scorebutton"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/eventbutton"
        android:layout_toEndOf="@+id/eventbutton" />






    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"

        android:text="Club"
        android:id="@+id/clubutton"
        android:layout_gravity="top"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/holebutton"
        android:layout_toStartOf="@+id/holebutton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"

        android:text="Hole"
        android:id="@+id/holebutton"
        android:layout_gravity="top"
        android:layout_alignTop="@+id/clubutton"
        android:layout_toLeftOf="@+id/eventbutton"
        android:layout_toStartOf="@+id/eventbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"

        android:text="Event"
        android:id="@+id/eventbutton"
        android:layout_gravity="top"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/markerbutton"
        android:layout_toStartOf="@+id/markerbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="76dp"

        android:text="Mark Ball"
        android:id="@+id/markerbutton"
        android:layout_gravity="top"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>


